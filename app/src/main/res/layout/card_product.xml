<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_masakan"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ayamgoreng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/buesii" />

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/tv_nama_makanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="2.2dp"
                    android:text="Sop Iga Susi"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jumlah_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:letterSpacing="0.05"
                        android:paddingBottom="10dp"
                        android:text="23 Reviews"
                        android:textSize="10sp" />

                    <RatingBar
                        android:id="@+id/rb_makanan"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:paddingTop="6dp"
                        android:rating="4.7"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:theme="@style/RatingBar" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/hargaMakanan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rp 18000"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
