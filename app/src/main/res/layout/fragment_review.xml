<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="32sp"
                    android:paddingRight="13dp"
                    android:textStyle="bold"
                    android:text="4.7" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rating"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="26dp"
                    android:numStars="5"
                    android:rating="4.7"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rating"
                    android:layout_below="@id/ratingBar"
                    android:layout_marginLeft="13dp"
                    android:textSize="10sp"
                    android:text="from 20 people" />


            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_32"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:src="@drawable/khalida" />

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:lineSpacingExtra="2.2dp"
                            android:text="Khalidazia11"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="4.7"
                            android:scaleX="1.25"
                            android:scaleY="1.25"
                            style="?android:attr/ratingBarStyleSmall"
                            android:theme="@style/RatingBar" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Masakn ibunya enak, nanti aku bakalan beli lagi"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_32"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:src="@drawable/ica1" />

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:lineSpacingExtra="2.2dp"
                            android:text="Marissagift11"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="4.7"
                            android:scaleX="1.25"
                            android:scaleY="1.25"
                            style="?android:attr/ratingBarStyleSmall"
                            android:theme="@style/RatingBar" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Porsinya gede jadi puas deh"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_32"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:src="@drawable/hylda" />

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:lineSpacingExtra="2.2dp"
                            android:text="Augin"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="4.7"
                            android:scaleX="1.25"
                            android:scaleY="1.25"
                            style="?android:attr/ratingBarStyleSmall"
                            android:theme="@style/RatingBar" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Masakannya enak, porsinya juga banyak cocok buat aku suka makan hehe"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
