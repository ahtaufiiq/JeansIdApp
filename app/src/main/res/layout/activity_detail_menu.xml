<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/gambarMenu"
      android:layout_width="280dp"
      android:layout_height="150dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="42dp"
      app:srcCompat="@mipmap/ic_launcher"/>

  <TextView
      android:id="@+id/namaMenu"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/gambarMenu"
      android:layout_marginLeft="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="37dp"
      android:text="Sate Kambing Bu Esi"
      android:textColor="@color/BlackDove"
      android:textSize="22dp"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/hargaMenu"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_alignBottom="@+id/namaMenu"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="20dp"
      android:text="Rp 18.000"
      android:textColor="@color/colorPrimary"
      android:textSize="20dp"
      android:layout_marginRight="20dp"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/kategori"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_alignLeft="@+id/namaMenu"
      android:layout_alignStart="@+id/namaMenu"
      android:layout_below="@+id/namaMenu"
      android:text="Sate"
      android:layout_marginTop="3dp" />

  <ImageView
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignLeft="@+id/kategori"
      android:layout_alignStart="@+id/kategori"
      android:layout_below="@+id/kategori"
      android:id="@+id/profileImage"
      app:srcCompat="@mipmap/ic_launcher_round"
      android:layout_marginTop="5dp"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:layout_alignTop="@+id/profileImage"
      android:layout_marginLeft="13dp"
      android:layout_marginStart="13dp"
      android:layout_toEndOf="@+id/profileImage"
      android:layout_toRightOf="@+id/profileImage"
      android:text="Bu Esi"
      android:textColor="@color/BlackDove"
      android:textStyle="bold"
      android:id="@+id/profileName" />

  <TextView
      android:id="@+id/profileJobs"
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:layout_alignBottom="@+id/profileImage"
      android:layout_alignLeft="@+id/profileName"
      android:layout_alignStart="@+id/profileName"
      android:text="Guru TK Bhayangkara"
      />


</RelativeLayout>